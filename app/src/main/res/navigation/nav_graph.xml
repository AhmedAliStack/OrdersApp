<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.ahmedrafat.ordersapp.ui.mainfragment.MainFragment"
        android:label="@string/orders"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_addOrderFragment"
            app:destination="@id/addOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/reviewsFragment"
        android:name="com.ahmedrafat.ordersapp.ui.reviewsfragment.ReviewsFragment"
        android:label="My Reviews"
        tools:layout="@layout/reviews_fragment" />
    <fragment
        android:id="@+id/addOrderFragment"
        android:name="com.ahmedrafat.ordersapp.ui.addorderfragment.AddOrderFragment"
        android:label="@string/add_new_order"
        tools:layout="@layout/add_order_fragment" />
</navigation>